{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "importHelpers": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "noEmit": true,
    "skipDefaultLibCheck": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["apps/www/src/*"],
      "@serverize/client": ["packages/client/src/index.ts"],
      "@workspace/api/entities": ["apps/api/src/app/features/entities.ts"],
      "@workspace/api/entities/*": ["apps/api/src/app/entities/*"],
      "@workspace/entities": ["apps/api/src/app/features/entities.ts"],
      "@workspace/extensions/*": ["apps/api/src/app/extensions/*"],
      "@workspace/identity": ["apps/api/src/app/extensions/identity/index.ts"],
      "@workspace/utils": ["apps/api/src/app/core/utils.ts"],
      "@workspace/validation": ["apps/api/src/app/core/validation.ts"],
      "serverize": ["packages/serverize/src/index.ts"],
      "serverize/docker": ["packages/docker/src/index.ts"],
      "serverize/dockercompose": ["packages/dockercompose/src/index.ts"],
      "serverize/dockerfile": ["packages/dockerfile/src/index.ts"],
      "serverize/utils": ["packages/utils/src/index.ts"]
    }
  }
}
