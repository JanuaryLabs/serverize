{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "importHelpers": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["ESNext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "serverize": ["packages/serverize/src/index.ts"],
      "serverize/docker": ["packages/docker/src/index.ts"],
      "serverize/dockerfile": ["packages/dockerfile/src/index.ts"],
      "serverize/dockercompose": ["packages/dockercompose/src/index.ts"],
      "serverize/utils": ["packages/utils/src/index.ts"],
      "serverize/client": ["packages/client/src/index.ts"],
      "@extensions/firebase-auth": [
        "apps/api/output/src/extensions/firebase-auth/index.ts"
      ],
      "@extensions/hono": ["apps/api/output/src/extensions/hono/index.ts"],
      "@extensions/identity": [
        "apps/api/output/src/extensions/identity/index.ts"
      ],
      "@extensions/postgresql": [
        "apps/api/output/src/extensions/postgresql/index.ts"
      ],
      "@extensions/tokens": ["apps/api/src/extensions/tokens/index.ts"],
      "@extensions/user": ["apps/api/src/extensions/user/index.ts"],
      "@extensions/zod": ["apps/api/src/extensions/zod/index.ts"],
      "@workspace/entities": ["apps/api/output/src/features/entities.ts"],
      "@workspace/identity": [
        "apps/api/output/src/extensions/identity/index.ts"
      ],
      "@workspace/validation": ["apps/api/output/src/core/validation.ts"],
      "@workspace/utils": ["apps/api/output/src/core/utils.ts"]
    }
  }
}
