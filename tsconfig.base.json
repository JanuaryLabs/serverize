{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "importHelpers": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "noEmit": true,
    "skipDefaultLibCheck": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["apps/www/src/*"],
      "@serverize/client": ["packages/client/src/index.ts"],
      "serverize": ["packages/serverize/src/index.ts"],
      "serverize/docker": ["packages/docker/src/index.ts"],
      "serverize/dockercompose": ["packages/dockercompose/src/index.ts"],
      "serverize/dockerfile": ["packages/dockerfile/src/index.ts"],
      "serverize/utils": ["packages/utils/src/index.ts"]
    }
  }
}
