{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*"],
    "production": ["default"]
  },
  "nxCloudId": "67694c33332c815be66622de",
  "useInferencePlugins": false,
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "plugins": ["@nxtensions/astro"],
  "releaseTagPattern": "release/{version}",
  "release": {
    "conventionalCommits": {
      "types": {
        "chore": {
          "changelog": {
            "hidden": true
          }
        },
        "refactor": {
          "semverBump": "patch"
        }
      }
    },
    "changelog": {
      "workspaceChangelog": {
        "file": false
      }
    },
    "projects": ["serverize", "client"],
    "releaseTagPattern": "release/{version}",
    "version": {
      "preVersionCommand": "npx nx run-many --projects=serverize,client -t build -c production",
      "conventionalCommits": true
    }
  },
  "targetDefaults": {
    "@nxtensions/astro:build": {
      "inputs": ["production", "^production"],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "cache": true
    },
    "@nxtensions/astro:check": {
      "inputs": ["production", "^production"],
      "cache": true
    },
    "@nxtensions/astro:preview": {
      "dependsOn": ["build"]
    }
  }
}
